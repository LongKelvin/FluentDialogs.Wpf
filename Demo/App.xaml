<Application x:Class="FluentDialogs.Demo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 
                    v2 Theme System — single entry point.
                    Contains all layers: Primitives → Semantics → Brushes → Typography → Layout → Controls → Legacy compat.
                    Default preset is Light. Use IFluentDialogThemeService.ApplyPreset() to switch at runtime.
                -->
                <ResourceDictionary Source="pack://application:,,,/FluentDialogs.Wpf;component/Themes/FluentDialogs.Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
