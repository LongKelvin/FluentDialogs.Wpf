<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        ═══════════════════════════════════════════════════════════════
        MIDNIGHT DARK PRESET — Custom Brand Theme Demo
        ═══════════════════════════════════════════════════════════════
        
        A dark-mode custom preset with teal accent.
        Demonstrates that custom presets work with dark backgrounds too.
    -->

    <!-- ═══════ Surface ═══════ -->
    <Color x:Key="FDSemSurfacePrimary">#1A1A2E</Color>
    <Color x:Key="FDSemSurfaceSecondary">#16213E</Color>
    <Color x:Key="FDSemSurfaceOverlay">#60000000</Color>

    <!-- ═══════ On Surface ═══════ -->
    <Color x:Key="FDSemOnSurfacePrimary">#E4E4F0</Color>
    <Color x:Key="FDSemOnSurfaceSecondary">#8888AA</Color>

    <!-- ═══════ Interactive (Brand Accent) ═══════ -->
    <Color x:Key="FDSemInteractiveDefault">#0A9396</Color>
    <Color x:Key="FDSemInteractiveHover">#088183</Color>
    <Color x:Key="FDSemInteractivePressed">#066E70</Color>
    <Color x:Key="FDSemOnInteractive">#FFFFFF</Color>

    <!-- ═══════ Neutral ═══════ -->
    <Color x:Key="FDSemNeutralDefault">#252547</Color>
    <Color x:Key="FDSemNeutralHover">#303060</Color>
    <Color x:Key="FDSemNeutralPressed">#1E1E3A</Color>

    <!-- ═══════ Status: Error ═══════ -->
    <Color x:Key="FDSemStatusError">#F1707B</Color>
    <Color x:Key="FDSemStatusErrorSubtle">#3C2A2A</Color>
    <Color x:Key="FDSemOnStatusError">#FFFFFF</Color>
    <Color x:Key="FDSemStatusErrorHover">#E04E5A</Color>
    <Color x:Key="FDSemStatusErrorPressed">#C73644</Color>

    <!-- ═══════ Status: Warning ═══════ -->
    <Color x:Key="FDSemStatusWarning">#FCE100</Color>
    <Color x:Key="FDSemStatusWarningSubtle">#3C3520</Color>

    <!-- ═══════ Status: Success ═══════ -->
    <Color x:Key="FDSemStatusSuccess">#6CCB5F</Color>
    <Color x:Key="FDSemStatusSuccessSubtle">#1F3D1F</Color>

    <!-- ═══════ Status: Info ═══════ -->
    <Color x:Key="FDSemStatusInfo">#0A9396</Color>

    <!-- ═══════ Border ═══════ -->
    <Color x:Key="FDSemBorderDefault">#303060</Color>
    <Color x:Key="FDSemBorderStrong">#0A9396</Color>

    <!-- ═══════ Elevation ═══════ -->
    <Color x:Key="FDSemShadow">#50000000</Color>

    <!-- ═══════ Link ═══════ -->
    <Color x:Key="FDSemLinkDefault">#0A9396</Color>
    <Color x:Key="FDSemLinkHover">#066E70</Color>

    <!-- ═══════ Close Button ═══════ -->
    <Color x:Key="FDSemCloseHover">#E81123</Color>
    <Color x:Key="FDSemClosePressed">#C50E1F</Color>
    <Color x:Key="FDSemOnClose">#FFFFFF</Color>

</ResourceDictionary>
