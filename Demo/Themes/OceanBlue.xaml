<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        ═══════════════════════════════════════════════════════════════
        OCEAN BLUE PRESET — Custom Brand Theme Demo
        ═══════════════════════════════════════════════════════════════
        
        Inspired by Microsoft Word / Outlook blue branding.
        Demonstrates how a customer app with blue theming would
        integrate FluentDialogs to match their brand identity.
    -->

    <!-- ═══════ Surface ═══════ -->
    <Color x:Key="FDSemSurfacePrimary">#F0F6FF</Color>
    <Color x:Key="FDSemSurfaceSecondary">#E1EFFF</Color>
    <Color x:Key="FDSemSurfaceOverlay">#30004080</Color>

    <!-- ═══════ On Surface ═══════ -->
    <Color x:Key="FDSemOnSurfacePrimary">#0F2B46</Color>
    <Color x:Key="FDSemOnSurfaceSecondary">#3B6998</Color>

    <!-- ═══════ Interactive (Brand Accent) ═══════ -->
    <Color x:Key="FDSemInteractiveDefault">#0F6CBD</Color>
    <Color x:Key="FDSemInteractiveHover">#0C5AA0</Color>
    <Color x:Key="FDSemInteractivePressed">#094A84</Color>
    <Color x:Key="FDSemOnInteractive">#FFFFFF</Color>

    <!-- ═══════ Neutral ═══════ -->
    <Color x:Key="FDSemNeutralDefault">#FFFFFF</Color>
    <Color x:Key="FDSemNeutralHover">#E1EFFF</Color>
    <Color x:Key="FDSemNeutralPressed">#C7DFFF</Color>

    <!-- ═══════ Status: Error ═══════ -->
    <Color x:Key="FDSemStatusError">#C4314B</Color>
    <Color x:Key="FDSemStatusErrorSubtle">#FCE4EC</Color>
    <Color x:Key="FDSemOnStatusError">#FFFFFF</Color>
    <Color x:Key="FDSemStatusErrorHover">#A52A3C</Color>
    <Color x:Key="FDSemStatusErrorPressed">#8B1A2B</Color>

    <!-- ═══════ Status: Warning ═══════ -->
    <Color x:Key="FDSemStatusWarning">#E8780A</Color>
    <Color x:Key="FDSemStatusWarningSubtle">#FFF3E0</Color>

    <!-- ═══════ Status: Success ═══════ -->
    <Color x:Key="FDSemStatusSuccess">#0E7A0D</Color>
    <Color x:Key="FDSemStatusSuccessSubtle">#E2F6E2</Color>

    <!-- ═══════ Status: Info ═══════ -->
    <Color x:Key="FDSemStatusInfo">#0F6CBD</Color>

    <!-- ═══════ Border ═══════ -->
    <Color x:Key="FDSemBorderDefault">#B4D6F5</Color>
    <Color x:Key="FDSemBorderStrong">#0F6CBD</Color>

    <!-- ═══════ Elevation ═══════ -->
    <Color x:Key="FDSemShadow">#30004080</Color>

    <!-- ═══════ Link ═══════ -->
    <Color x:Key="FDSemLinkDefault">#0F6CBD</Color>
    <Color x:Key="FDSemLinkHover">#094A84</Color>

    <!-- ═══════ Close Button ═══════ -->
    <Color x:Key="FDSemCloseHover">#E81123</Color>
    <Color x:Key="FDSemClosePressed">#C50E1F</Color>
    <Color x:Key="FDSemOnClose">#FFFFFF</Color>

</ResourceDictionary>
