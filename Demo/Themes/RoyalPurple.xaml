<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        ═══════════════════════════════════════════════════════════════
        ROYAL PURPLE PRESET — Custom Brand Theme Demo
        ═══════════════════════════════════════════════════════════════
        
        Inspired by Microsoft OneNote / Teams purple branding.
        Demonstrates a creative app with purple-themed dialogs.
    -->

    <!-- ═══════ Surface ═══════ -->
    <Color x:Key="FDSemSurfacePrimary">#F5F0FF</Color>
    <Color x:Key="FDSemSurfaceSecondary">#EDE5FF</Color>
    <Color x:Key="FDSemSurfaceOverlay">#30400080</Color>

    <!-- ═══════ On Surface ═══════ -->
    <Color x:Key="FDSemOnSurfacePrimary">#1B0036</Color>
    <Color x:Key="FDSemOnSurfaceSecondary">#6B4D9A</Color>

    <!-- ═══════ Interactive (Brand Accent) ═══════ -->
    <Color x:Key="FDSemInteractiveDefault">#7B2F8E</Color>
    <Color x:Key="FDSemInteractiveHover">#6A2879</Color>
    <Color x:Key="FDSemInteractivePressed">#5A2165</Color>
    <Color x:Key="FDSemOnInteractive">#FFFFFF</Color>

    <!-- ═══════ Neutral ═══════ -->
    <Color x:Key="FDSemNeutralDefault">#FFFFFF</Color>
    <Color x:Key="FDSemNeutralHover">#EDE5FF</Color>
    <Color x:Key="FDSemNeutralPressed">#DDD0FF</Color>

    <!-- ═══════ Status: Error ═══════ -->
    <Color x:Key="FDSemStatusError">#C4314B</Color>
    <Color x:Key="FDSemStatusErrorSubtle">#FCE4EC</Color>
    <Color x:Key="FDSemOnStatusError">#FFFFFF</Color>
    <Color x:Key="FDSemStatusErrorHover">#A52A3C</Color>
    <Color x:Key="FDSemStatusErrorPressed">#8B1A2B</Color>

    <!-- ═══════ Status: Warning ═══════ -->
    <Color x:Key="FDSemStatusWarning">#E8780A</Color>
    <Color x:Key="FDSemStatusWarningSubtle">#FFF3E0</Color>

    <!-- ═══════ Status: Success ═══════ -->
    <Color x:Key="FDSemStatusSuccess">#0E7A0D</Color>
    <Color x:Key="FDSemStatusSuccessSubtle">#E2F6E2</Color>

    <!-- ═══════ Status: Info ═══════ -->
    <Color x:Key="FDSemStatusInfo">#7B2F8E</Color>

    <!-- ═══════ Border ═══════ -->
    <Color x:Key="FDSemBorderDefault">#D0B8E8</Color>
    <Color x:Key="FDSemBorderStrong">#7B2F8E</Color>

    <!-- ═══════ Elevation ═══════ -->
    <Color x:Key="FDSemShadow">#30400080</Color>

    <!-- ═══════ Link ═══════ -->
    <Color x:Key="FDSemLinkDefault">#7B2F8E</Color>
    <Color x:Key="FDSemLinkHover">#5A2165</Color>

    <!-- ═══════ Close Button ═══════ -->
    <Color x:Key="FDSemCloseHover">#E81123</Color>
    <Color x:Key="FDSemClosePressed">#C50E1F</Color>
    <Color x:Key="FDSemOnClose">#FFFFFF</Color>

</ResourceDictionary>
