<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        ═══════════════════════════════════════════════════════════════
        SUNSET ORANGE PRESET — Custom Brand Theme Demo
        ═══════════════════════════════════════════════════════════════
        
        Inspired by Microsoft PowerPoint orange / warm branding.
        Demonstrates an enterprise app with orange/warm color scheme.
    -->

    <!-- ═══════ Surface ═══════ -->
    <Color x:Key="FDSemSurfacePrimary">#FFF8F0</Color>
    <Color x:Key="FDSemSurfaceSecondary">#FFF0E0</Color>
    <Color x:Key="FDSemSurfaceOverlay">#30804000</Color>

    <!-- ═══════ On Surface ═══════ -->
    <Color x:Key="FDSemOnSurfacePrimary">#3D1E00</Color>
    <Color x:Key="FDSemOnSurfaceSecondary">#8B5E34</Color>

    <!-- ═══════ Interactive (Brand Accent) ═══════ -->
    <Color x:Key="FDSemInteractiveDefault">#D83B01</Color>
    <Color x:Key="FDSemInteractiveHover">#B83200</Color>
    <Color x:Key="FDSemInteractivePressed">#9A2900</Color>
    <Color x:Key="FDSemOnInteractive">#FFFFFF</Color>

    <!-- ═══════ Neutral ═══════ -->
    <Color x:Key="FDSemNeutralDefault">#FFFFFF</Color>
    <Color x:Key="FDSemNeutralHover">#FFF0E0</Color>
    <Color x:Key="FDSemNeutralPressed">#FFE0C0</Color>

    <!-- ═══════ Status: Error ═══════ -->
    <Color x:Key="FDSemStatusError">#C4314B</Color>
    <Color x:Key="FDSemStatusErrorSubtle">#FCE4EC</Color>
    <Color x:Key="FDSemOnStatusError">#FFFFFF</Color>
    <Color x:Key="FDSemStatusErrorHover">#A52A3C</Color>
    <Color x:Key="FDSemStatusErrorPressed">#8B1A2B</Color>

    <!-- ═══════ Status: Warning ═══════ -->
    <Color x:Key="FDSemStatusWarning">#FFC107</Color>
    <Color x:Key="FDSemStatusWarningSubtle">#FFF8E1</Color>

    <!-- ═══════ Status: Success ═══════ -->
    <Color x:Key="FDSemStatusSuccess">#0E7A0D</Color>
    <Color x:Key="FDSemStatusSuccessSubtle">#E2F6E2</Color>

    <!-- ═══════ Status: Info ═══════ -->
    <Color x:Key="FDSemStatusInfo">#D83B01</Color>

    <!-- ═══════ Border ═══════ -->
    <Color x:Key="FDSemBorderDefault">#F5D5B5</Color>
    <Color x:Key="FDSemBorderStrong">#D83B01</Color>

    <!-- ═══════ Elevation ═══════ -->
    <Color x:Key="FDSemShadow">#30804000</Color>

    <!-- ═══════ Link ═══════ -->
    <Color x:Key="FDSemLinkDefault">#D83B01</Color>
    <Color x:Key="FDSemLinkHover">#9A2900</Color>

    <!-- ═══════ Close Button ═══════ -->
    <Color x:Key="FDSemCloseHover">#E81123</Color>
    <Color x:Key="FDSemClosePressed">#C50E1F</Color>
    <Color x:Key="FDSemOnClose">#FFFFFF</Color>

</ResourceDictionary>
