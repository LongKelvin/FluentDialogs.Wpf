<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:enums="clr-namespace:FluentDialogs.Enums">

    <!--
        ═══════════════════════════════════════════════════════════════
        BUTTON STYLES — FluentDialogs.Wpf v2.0
        ═══════════════════════════════════════════════════════════════
        
        All button styles for dialogs. Uses FDBrush* and FD layout tokens.
        Zero hardcoded colors.
    -->

    <!-- ═══════ Base Button Style ═══════ -->
    <Style x:Key="FDButtonBaseStyle" TargetType="{x:Type Button}">
        <Setter Property="MinWidth" Value="{DynamicResource FDSizeButtonMinWidth}"/>
        <Setter Property="MinHeight" Value="{DynamicResource FDSizeButtonMinHeight}"/>
        <Setter Property="Padding" Value="{DynamicResource FDSpacingButtonContent}"/>
        <Setter Property="FontSize" Value="{DynamicResource FDTypeSizeMd}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FDTypeFontFamily}"/>
        <Setter Property="BorderThickness" Value="{DynamicResource FDBorderThicknessDefault}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource FDRadiusSm}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter x:Name="contentPresenter"
                                          Focusable="False"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"
                                          RecognizesAccessKey="True"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource FDBrushInteractiveDefault}"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="{DynamicResource FDBorderThicknessFocus}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════ Default (Neutral) Button Style ═══════ -->
    <Style x:Key="FDButtonDefaultStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDButtonBaseStyle}">
        <Setter Property="Background" Value="{DynamicResource FDBrushNeutralDefault}"/>
        <Setter Property="Foreground" Value="{DynamicResource FDBrushOnSurfacePrimary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource FDBrushBorderDefault}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource FDBrushNeutralHover}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource FDBrushBorderStrong}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource FDBrushNeutralPressed}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="{DynamicResource FDOpacityDisabled}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ═══════ Primary (Accent) Button Style ═══════ -->
    <Style x:Key="FDButtonPrimaryStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDButtonBaseStyle}">
        <Setter Property="Background" Value="{DynamicResource FDBrushInteractiveDefault}"/>
        <Setter Property="Foreground" Value="{DynamicResource FDBrushOnInteractive}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource FDBrushInteractiveDefault}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource FDBrushInteractiveHover}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource FDBrushInteractiveHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource FDBrushInteractivePressed}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource FDBrushInteractivePressed}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="{DynamicResource FDOpacityDisabled}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ═══════ Secondary Button Style ═══════ -->
    <Style x:Key="FDButtonSecondaryStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDButtonDefaultStyle}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{DynamicResource FDBrushBorderDefault}"/>
    </Style>

    <!-- ═══════ Danger Button Style ═══════ -->
    <Style x:Key="FDButtonDangerStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDButtonBaseStyle}">
        <Setter Property="Background" Value="{DynamicResource FDBrushStatusError}"/>
        <Setter Property="Foreground" Value="{DynamicResource FDBrushOnInteractive}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource FDBrushStatusError}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource FDBrushStatusErrorHover}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource FDBrushStatusErrorHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource FDBrushStatusErrorPressed}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource FDBrushStatusErrorPressed}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="{DynamicResource FDOpacityDisabled}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ═══════ Close Button Style (Title Bar) ═══════ -->
    <Style x:Key="FDCloseButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="{DynamicResource FDSizeCloseButtonWidth}"/>
        <Setter Property="Height" Value="{DynamicResource FDSizeCloseButtonHeight}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource FDBrushOnSurfacePrimary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="{DynamicResource FDTypeFontFamilyIcon}"/>
        <Setter Property="FontSize" Value="{DynamicResource FDTypeSizeIconSm}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{DynamicResource FDRadiusCloseButton}"
                            SnapsToDevicePixels="True">
                        <TextBlock Text="&#xE106;"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="{DynamicResource FDTypeFontFamilyIcon}"
                                   FontSize="{DynamicResource FDTypeSizeIconSm}"
                                   Foreground="{TemplateBinding Foreground}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource FDBrushCloseHover}"/>
                            <Setter Property="Foreground" Value="{DynamicResource FDBrushOnClose}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource FDBrushClosePressed}"/>
                            <Setter Property="Foreground" Value="{DynamicResource FDBrushOnClose}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════ Hyperlink Button Style ═══════ -->
    <Style x:Key="FDHyperlinkButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource FDBrushLinkDefault}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="{DynamicResource FDTypeSizeSm}"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <TextBlock x:Name="textBlock"
                               Text="{TemplateBinding Content}"
                               Foreground="{TemplateBinding Foreground}"
                               TextDecorations="Underline"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="textBlock" Property="Foreground" Value="{DynamicResource FDBrushLinkHover}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════ Icon Button Style (Copy, etc.) ═══════ -->
    <Style x:Key="FDIconButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="{DynamicResource FDSpacingXs}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="{DynamicResource FDSizeCopyButtonSize}"/>
        <Setter Property="Height" Value="{DynamicResource FDSizeCopyButtonSize}"/>
        <Setter Property="ToolTip" Value="Copy to clipboard"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="{DynamicResource FDRadiusSm}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource FDBrushNeutralHover}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════ Message Box Button Style Selector (DataTrigger-based) ═══════ -->
    <Style x:Key="FDMessageBoxButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDButtonDefaultStyle}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Style}" Value="{x:Static enums:ButtonStyle.Primary}">
                <Setter Property="Background" Value="{DynamicResource FDBrushInteractiveDefault}"/>
                <Setter Property="Foreground" Value="{DynamicResource FDBrushOnInteractive}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource FDBrushInteractiveDefault}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Style}" Value="{x:Static enums:ButtonStyle.Secondary}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="{DynamicResource FDBrushBorderDefault}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding Style}" Value="{x:Static enums:ButtonStyle.Danger}">
                <Setter Property="Background" Value="{DynamicResource FDBrushStatusError}"/>
                <Setter Property="Foreground" Value="{DynamicResource FDBrushOnInteractive}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource FDBrushStatusError}"/>
            </DataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Style}" Value="{x:Static enums:ButtonStyle.Primary}"/>
                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Background" Value="{DynamicResource FDBrushInteractiveHover}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource FDBrushInteractiveHover}"/>
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Style}" Value="{x:Static enums:ButtonStyle.Danger}"/>
                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                </MultiDataTrigger.Conditions>
                <Setter Property="Background" Value="{DynamicResource FDBrushStatusErrorHover}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource FDBrushStatusErrorHover}"/>
            </MultiDataTrigger>
        </Style.Triggers>
    </Style>

    <!-- ═══════════════ v1 Backward-Compatible Aliases ═══════════════ -->
    <!--  These allow existing code referencing old style keys to continue working. -->
    <Style x:Key="FluentButtonBaseStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDButtonBaseStyle}"/>
    <Style x:Key="FluentButtonDefaultStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDButtonDefaultStyle}"/>
    <Style x:Key="FluentButtonPrimaryStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDButtonPrimaryStyle}"/>
    <Style x:Key="FluentButtonSecondaryStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDButtonSecondaryStyle}"/>
    <Style x:Key="FluentButtonDangerStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDButtonDangerStyle}"/>
    <Style x:Key="FluentCloseButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDCloseButtonStyle}"/>
    <Style x:Key="FluentHyperlinkStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDHyperlinkButtonStyle}"/>
    <Style x:Key="FluentMessageBoxButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDMessageBoxButtonStyle}"/>
    <Style x:Key="IconButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource FDIconButtonStyle}"/>

</ResourceDictionary>
