<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:FluentDialogs.Controls"
                    xmlns:enums="clr-namespace:FluentDialogs.Enums">

    <!--
        ═══════════════════════════════════════════════════════════════
        ICON PRESENTER STYLE — FluentDialogs.Wpf v2.0
        ═══════════════════════════════════════════════════════════════
        
        Migrated from Controls/IconPresenter.xaml to use FDBrush* tokens.
        Provides backward-compatible brush aliases for v1 key names.
    -->

    <Style TargetType="{x:Type controls:IconPresenter}">
        <Setter Property="Width" Value="{DynamicResource FDSizeIconPresenterDefault}"/>
        <Setter Property="Height" Value="{DynamicResource FDSizeIconPresenterDefault}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:IconPresenter}">
                    <Viewbox Width="{TemplateBinding Width}" 
                             Height="{TemplateBinding Height}"
                             Stretch="Uniform">
                        <Path Width="32" 
                              Height="32"
                              Data="{TemplateBinding IconContent}"
                              Fill="{DynamicResource FDBrushStatusInfo}"
                              Stroke="{DynamicResource FDBrushStatusInfo}"
                              StrokeThickness="2"
                              Stretch="Uniform">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Icon}" 
                                                     Value="{x:Static enums:MessageBoxIcon.Info}">
                                            <Setter Property="Fill" Value="{DynamicResource FDBrushStatusInfo}"/>
                                            <Setter Property="Stroke" Value="{DynamicResource FDBrushStatusInfo}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Icon}" 
                                                     Value="{x:Static enums:MessageBoxIcon.Warning}">
                                            <Setter Property="Fill" Value="{DynamicResource FDBrushStatusWarning}"/>
                                            <Setter Property="Stroke" Value="{DynamicResource FDBrushStatusWarning}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Icon}" 
                                                     Value="{x:Static enums:MessageBoxIcon.Error}">
                                            <Setter Property="Fill" Value="{DynamicResource FDBrushStatusError}"/>
                                            <Setter Property="Stroke" Value="{DynamicResource FDBrushStatusError}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Icon}" 
                                                     Value="{x:Static enums:MessageBoxIcon.Success}">
                                            <Setter Property="Fill" Value="{DynamicResource FDBrushStatusSuccess}"/>
                                            <Setter Property="Stroke" Value="{DynamicResource FDBrushStatusSuccess}"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Icon}" 
                                                     Value="{x:Static enums:MessageBoxIcon.Question}">
                                            <Setter Property="Fill" Value="{DynamicResource FDBrushStatusInfo}"/>
                                            <Setter Property="Stroke" Value="{DynamicResource FDBrushStatusInfo}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════ v1 Backward-Compatible Brush Aliases ═══════════════ -->
    <SolidColorBrush x:Key="InfoIconBrush"
                     Color="{DynamicResource FDSemStatusInfo}"/>
    <SolidColorBrush x:Key="WarningIconBrush"
                     Color="{DynamicResource FDSemStatusWarning}"/>
    <SolidColorBrush x:Key="ErrorIconBrush"
                     Color="{DynamicResource FDSemStatusError}"/>
    <SolidColorBrush x:Key="SuccessIconBrush"
                     Color="{DynamicResource FDSemStatusSuccess}"/>
    <SolidColorBrush x:Key="QuestionIconBrush"
                     Color="{DynamicResource FDSemStatusInfo}"/>

</ResourceDictionary>
