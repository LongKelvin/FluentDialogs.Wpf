<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        ═══════════════════════════════════════════════════════════════
        TOAST STYLES — FluentDialogs.Wpf v2.0
        ═══════════════════════════════════════════════════════════════
        
        Styles for toast notification UI elements.
        Fixes v1 bug: hardcoded #20000000 close button hover.
    -->

    <!-- ═══════ Toast Border (Outer Container) ═══════ -->
    <Style x:Key="FDToastBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource FDBrushSurfacePrimary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource FDBrushBorderDefault}"/>
        <Setter Property="BorderThickness" Value="{DynamicResource FDBorderThicknessDefault}"/>
        <Setter Property="CornerRadius" Value="{DynamicResource FDRadiusMd}"/>
        <Setter Property="Margin" Value="{DynamicResource FDSpacingToastMargin}"/>
        <Setter Property="Padding" Value="{DynamicResource FDSpacingToastPadding}"/>
    </Style>

    <!-- ═══════ Toast Title Text ═══════ -->
    <Style x:Key="FDToastTitleStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontWeight" Value="{DynamicResource FDTypeWeightSemiBold}"/>
        <Setter Property="FontSize" Value="{DynamicResource FDTypeSizeSm}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FDTypeFontFamily}"/>
        <Setter Property="Foreground" Value="{DynamicResource FDBrushOnSurfacePrimary}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- ═══════ Toast Message Text ═══════ -->
    <Style x:Key="FDToastMessageStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{DynamicResource FDTypeSizeSm}"/>
        <Setter Property="FontFamily" Value="{DynamicResource FDTypeFontFamily}"/>
        <Setter Property="Foreground" Value="{DynamicResource FDBrushOnSurfaceSecondary}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- ═══════ Toast Close Button ═══════ -->
    <Style x:Key="FDToastCloseButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Content" Value="x"/>
        <Setter Property="FontSize" Value="{DynamicResource FDTypeSizeLg}"/>
        <Setter Property="Foreground" Value="{DynamicResource FDBrushOnSurfaceSecondary}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource FDBrushSurfaceOverlay}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══════════════ v1 Backward-Compatible Brush Aliases ═══════════════ -->
    <!--  v1 ToastControl.xaml used these key names directly  -->
    <SolidColorBrush x:Key="ToastBackground"
                     Color="{DynamicResource FDSemSurfacePrimary}"/>
    <SolidColorBrush x:Key="ToastForeground"
                     Color="{DynamicResource FDSemOnSurfacePrimary}"/>
    <SolidColorBrush x:Key="ToastSecondaryForeground"
                     Color="{DynamicResource FDSemOnSurfaceSecondary}"/>
    <SolidColorBrush x:Key="ToastBorderBrush"
                     Color="{DynamicResource FDSemBorderDefault}"/>

</ResourceDictionary>
