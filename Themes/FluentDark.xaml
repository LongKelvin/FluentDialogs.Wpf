<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ThemeResources.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Dark Theme Color Overrides - Windows 11 Fluent Design -->
    
    <!-- Background Colors -->
    <Color x:Key="DialogBackgroundColor">#2D2D2D</Color>
    <Color x:Key="DialogOverlayColor">#40000000</Color>
    
    <!-- Foreground Colors -->
    <Color x:Key="DialogForegroundColor">#FFFFFF</Color>
    <Color x:Key="DialogSecondaryForegroundColor">#C8C6C4</Color>
    
    <!-- Border Colors -->
    <Color x:Key="DialogBorderColor">#3E3E3E</Color>
    <Color x:Key="DialogShadowColor">#60000000</Color>
    
    <!-- Button Colors -->
    <Color x:Key="ButtonBackgroundColor">#3B3B3B</Color>
    <Color x:Key="ButtonForegroundColor">#FFFFFF</Color>
    <Color x:Key="ButtonBorderColor">#8A8886</Color>
    <Color x:Key="ButtonHoverBackgroundColor">#4A4A4A</Color>
    <Color x:Key="ButtonHoverBorderColor">#FFFFFF</Color>
    <Color x:Key="ButtonPressedBackgroundColor">#323232</Color>
    
    <!-- Primary Button Colors -->
    <Color x:Key="PrimaryButtonBackgroundColor">#0078D4</Color>
    <Color x:Key="PrimaryButtonForegroundColor">#FFFFFF</Color>
    <Color x:Key="PrimaryButtonHoverBackgroundColor">#106EBE</Color>
    <Color x:Key="PrimaryButtonPressedBackgroundColor">#005A9E</Color>
    
    <!-- Danger Button Colors -->
    <Color x:Key="DangerButtonBackgroundColor">#D13438</Color>
    <Color x:Key="DangerButtonForegroundColor">#FFFFFF</Color>
    <Color x:Key="DangerButtonHoverBackgroundColor">#A4262C</Color>
    <Color x:Key="DangerButtonPressedBackgroundColor">#8F1E22</Color>
    
    <!-- Icon Colors -->
    <Color x:Key="InfoIconColor">#60CDFF</Color>
    <Color x:Key="WarningIconColor">#FCE100</Color>
    <Color x:Key="ErrorIconColor">#F1707B</Color>
    <Color x:Key="SuccessIconColor">#6CCB5F</Color>
    <Color x:Key="QuestionIconColor">#60CDFF</Color>
    
    <!-- Exception Display Colors -->
    <Color x:Key="ExceptionBackgroundColor">#3C2A2A</Color>
    <Color x:Key="ExceptionBorderColor">#8B4A4A</Color>
    <Color x:Key="ExceptionForegroundColor">#F1707B</Color>
    <Color x:Key="HyperlinkColor">#60CDFF</Color>
    <Color x:Key="HyperlinkHoverColor">#3AA0F3</Color>

    <!-- Error Dialog Accent Colors (Dark Theme) -->
    <Color x:Key="ErrorDialogBorderColor">#F1707B</Color>
    <Color x:Key="ErrorDialogAccentColor">#3C2A2A</Color>
    
    <!-- Warning Dialog Accent Colors (Dark Theme) -->
    <Color x:Key="WarningDialogBorderColor">#FCE100</Color>
    <Color x:Key="WarningDialogAccentColor">#3C3520</Color>

</ResourceDictionary>
