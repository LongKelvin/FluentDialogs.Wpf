<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        ═══════════════════════════════════════════════════════════════
        LEGACY v1 COMPATIBILITY LAYER — FluentDialogs.Wpf v2.0
        ═══════════════════════════════════════════════════════════════
        
        Maps ALL v1 Color and Brush resource keys to their v2 equivalents.
        This allows existing code that references old keys (e.g., 
        DialogBackgroundColor, ButtonBackgroundBrush) to continue working
        after upgrade.
        
        DEPRECATION NOTICE:
        All keys in this file are considered DEPRECATED. They will be
        removed in v3.0. Migrate to FDBrush* / FDSem* keys.
        
        INCLUDED IN: FluentDialogs.Theme.xaml (Layer 8, before preset)
    -->

    <!-- ═══════════════════════════════════════════════════════════ -->
    <!--  v1 COLOR KEYS — Static Light-theme fallbacks.            -->
    <!--  XAML Color elements cannot bind via DynamicResource.      -->
    <!--  These exist only for code that hard-references old Color  -->
    <!--  keys. The Brush aliases below DO update at runtime.       -->
    <!--  These Color keys are overridden when a preset dictionary  -->
    <!--  is loaded (presets include v1 Color key overrides).       -->
    <!-- ═══════════════════════════════════════════════════════════ -->

    <!-- Background Colors -->
    <Color x:Key="DialogBackgroundColor">#FFFFFF</Color>
    <Color x:Key="DialogOverlayColor">#20000000</Color>

    <!-- Foreground Colors -->
    <Color x:Key="DialogForegroundColor">#201F1E</Color>
    <Color x:Key="DialogSecondaryForegroundColor">#605E5C</Color>

    <!-- Border Colors -->
    <Color x:Key="DialogBorderColor">#E1DFDD</Color>
    <Color x:Key="DialogShadowColor">#40000000</Color>

    <!-- Button Colors -->
    <Color x:Key="ButtonBackgroundColor">#FFFFFF</Color>
    <Color x:Key="ButtonForegroundColor">#201F1E</Color>
    <Color x:Key="ButtonBorderColor">#E1DFDD</Color>
    <Color x:Key="ButtonHoverBackgroundColor">#F3F2F1</Color>
    <Color x:Key="ButtonHoverBorderColor">#323130</Color>
    <Color x:Key="ButtonPressedBackgroundColor">#EDEBE9</Color>

    <!-- Primary Button Colors -->
    <Color x:Key="PrimaryButtonBackgroundColor">#0078D4</Color>
    <Color x:Key="PrimaryButtonForegroundColor">#FFFFFF</Color>
    <Color x:Key="PrimaryButtonHoverBackgroundColor">#106EBE</Color>
    <Color x:Key="PrimaryButtonPressedBackgroundColor">#005A9E</Color>

    <!-- Danger Button Colors -->
    <Color x:Key="DangerButtonBackgroundColor">#D13438</Color>
    <Color x:Key="DangerButtonForegroundColor">#FFFFFF</Color>
    <Color x:Key="DangerButtonHoverBackgroundColor">#A4262C</Color>
    <Color x:Key="DangerButtonPressedBackgroundColor">#8F1E22</Color>

    <!-- Icon Colors -->
    <Color x:Key="InfoIconColor">#0078D4</Color>
    <Color x:Key="WarningIconColor">#F7630C</Color>
    <Color x:Key="ErrorIconColor">#D13438</Color>
    <Color x:Key="SuccessIconColor">#107C10</Color>
    <Color x:Key="QuestionIconColor">#0078D4</Color>

    <!-- Exception Display Colors -->
    <Color x:Key="ExceptionBackgroundColor">#FDE7E9</Color>
    <Color x:Key="ExceptionBorderColor">#A4262C</Color>
    <Color x:Key="ExceptionForegroundColor">#A4262C</Color>
    <Color x:Key="HyperlinkColor">#0078D4</Color>
    <Color x:Key="HyperlinkHoverColor">#106EBE</Color>

    <!-- Error/Warning Dialog Accent Colors -->
    <Color x:Key="ErrorDialogBorderColor">#D13438</Color>
    <Color x:Key="ErrorDialogAccentColor">#FDE7E9</Color>
    <Color x:Key="WarningDialogBorderColor">#F7630C</Color>
    <Color x:Key="WarningDialogAccentColor">#FFF4CE</Color>

    <!-- Progress Bar Colors -->
    <Color x:Key="ProgressBarBackgroundColor">#F3F3F3</Color>
    <Color x:Key="ProgressBarForegroundColor">#0078D4</Color>

    <!-- Toast Colors -->
    <Color x:Key="ToastBackgroundColor">#FFFFFF</Color>
    <Color x:Key="ToastForegroundColor">#201F1E</Color>
    <Color x:Key="ToastSecondaryForegroundColor">#605E5C</Color>
    <Color x:Key="ToastBorderColor">#E1DFDD</Color>

    <!-- ═══════════════════════════════════════════ -->
    <!--  v1 BRUSH KEYS → v2 BRUSH TOKENS          -->
    <!-- ═══════════════════════════════════════════ -->

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="DialogBackgroundBrush"
                     Color="{DynamicResource FDSemSurfacePrimary}"/>
    <SolidColorBrush x:Key="DialogOverlayBrush"
                     Color="{DynamicResource FDSemSurfaceOverlay}"/>

    <!-- Foreground Brushes -->
    <SolidColorBrush x:Key="DialogForegroundBrush"
                     Color="{DynamicResource FDSemOnSurfacePrimary}"/>
    <SolidColorBrush x:Key="DialogSecondaryForegroundBrush"
                     Color="{DynamicResource FDSemOnSurfaceSecondary}"/>

    <!-- Border Brushes -->
    <SolidColorBrush x:Key="DialogBorderBrush"
                     Color="{DynamicResource FDSemBorderDefault}"/>
    <SolidColorBrush x:Key="DialogShadowBrush"
                     Color="{DynamicResource FDSemShadow}"/>

    <!-- Button Brushes -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush"
                     Color="{DynamicResource FDSemNeutralDefault}"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush"
                     Color="{DynamicResource FDSemOnSurfacePrimary}"/>
    <SolidColorBrush x:Key="ButtonBorderBrush"
                     Color="{DynamicResource FDSemBorderDefault}"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush"
                     Color="{DynamicResource FDSemNeutralHover}"/>
    <SolidColorBrush x:Key="ButtonHoverBorderBrush"
                     Color="{DynamicResource FDSemBorderStrong}"/>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush"
                     Color="{DynamicResource FDSemNeutralPressed}"/>

    <!-- Primary Button Brushes -->
    <SolidColorBrush x:Key="PrimaryButtonBackgroundBrush"
                     Color="{DynamicResource FDSemInteractiveDefault}"/>
    <SolidColorBrush x:Key="PrimaryButtonForegroundBrush"
                     Color="{DynamicResource FDSemOnInteractive}"/>
    <SolidColorBrush x:Key="PrimaryButtonHoverBackgroundBrush"
                     Color="{DynamicResource FDSemInteractiveHover}"/>
    <SolidColorBrush x:Key="PrimaryButtonPressedBackgroundBrush"
                     Color="{DynamicResource FDSemInteractivePressed}"/>

    <!-- Danger Button Brushes -->
    <SolidColorBrush x:Key="DangerButtonBackgroundBrush"
                     Color="{DynamicResource FDSemStatusError}"/>
    <SolidColorBrush x:Key="DangerButtonForegroundBrush"
                     Color="{DynamicResource FDSemOnInteractive}"/>
    <SolidColorBrush x:Key="DangerButtonHoverBackgroundBrush"
                     Color="{DynamicResource FDSemStatusErrorHover}"/>
    <SolidColorBrush x:Key="DangerButtonPressedBackgroundBrush"
                     Color="{DynamicResource FDSemStatusErrorPressed}"/>

    <!-- Exception Display Brushes -->
    <SolidColorBrush x:Key="ExceptionBackgroundBrush"
                     Color="{DynamicResource FDSemStatusErrorSubtle}"/>
    <SolidColorBrush x:Key="ExceptionBorderBrush"
                     Color="{DynamicResource FDSemOnStatusError}"/>
    <SolidColorBrush x:Key="ExceptionForegroundBrush"
                     Color="{DynamicResource FDSemOnStatusError}"/>
    <SolidColorBrush x:Key="HyperlinkBrush"
                     Color="{DynamicResource FDSemLinkDefault}"/>
    <SolidColorBrush x:Key="HyperlinkHoverBrush"
                     Color="{DynamicResource FDSemLinkHover}"/>

    <!-- Error/Warning Dialog Accent Brushes -->
    <SolidColorBrush x:Key="ErrorDialogBorderBrush"
                     Color="{DynamicResource FDSemStatusError}"/>
    <SolidColorBrush x:Key="ErrorDialogAccentBrush"
                     Color="{DynamicResource FDSemStatusErrorSubtle}"/>
    <SolidColorBrush x:Key="WarningDialogBorderBrush"
                     Color="{DynamicResource FDSemStatusWarning}"/>
    <SolidColorBrush x:Key="WarningDialogAccentBrush"
                     Color="{DynamicResource FDSemStatusWarningSubtle}"/>

    <!-- ═══════════════════════════════════════════ -->
    <!--  v1 MISSING KEYS (never existed, but were  -->
    <!--  referenced by ProgressWindow.xaml)         -->
    <!-- ═══════════════════════════════════════════ -->

    <!--  ProgressWindow.xaml used "DialogBackground" (not "DialogBackgroundBrush")  -->
    <SolidColorBrush x:Key="DialogBackground"
                     Color="{DynamicResource FDSemSurfacePrimary}"/>
    <SolidColorBrush x:Key="DialogForeground"
                     Color="{DynamicResource FDSemOnSurfacePrimary}"/>
    <SolidColorBrush x:Key="DialogSecondaryForeground"
                     Color="{DynamicResource FDSemOnSurfaceSecondary}"/>

    <!--  ProgressWindow.xaml used "SecondaryButtonStyle" which is actually  -->
    <!--  FluentButtonSecondaryStyle. Alias it here as a Style.  -->
    <Style x:Key="SecondaryButtonStyle" TargetType="{x:Type Button}"
           BasedOn="{StaticResource FDButtonSecondaryStyle}"/>

</ResourceDictionary>
