<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        ═══════════════════════════════════════════════════════════════
        DARK PRESET — FluentDialogs.Wpf v2.0
        ═══════════════════════════════════════════════════════════════
        
        Overrides semantic tokens for dark appearance.
        This file MUST ONLY contain Color overrides for FDSem* keys.
        It MUST NOT define brushes, styles, or templates.
    -->

    <!-- ═══════ Surface ═══════ -->
    <Color x:Key="FDSemSurfacePrimary">#2D2D2D</Color>
    <Color x:Key="FDSemSurfaceSecondary">#3B3B3B</Color>
    <Color x:Key="FDSemSurfaceOverlay">#40000000</Color>

    <!-- ═══════ On Surface ═══════ -->
    <Color x:Key="FDSemOnSurfacePrimary">#FFFFFF</Color>
    <Color x:Key="FDSemOnSurfaceSecondary">#C8C6C4</Color>

    <!-- ═══════ Interactive (Accent) ═══════ -->
    <Color x:Key="FDSemInteractiveDefault">#60CDFF</Color>
    <Color x:Key="FDSemInteractiveHover">#3AA0F3</Color>
    <Color x:Key="FDSemInteractivePressed">#0078D4</Color>
    <Color x:Key="FDSemOnInteractive">#000000</Color>

    <!-- ═══════ Neutral Interactive ═══════ -->
    <Color x:Key="FDSemNeutralDefault">#3B3B3B</Color>
    <Color x:Key="FDSemNeutralHover">#4A4A4A</Color>
    <Color x:Key="FDSemNeutralPressed">#323232</Color>

    <!-- ═══════ Status: Error ═══════ -->
    <Color x:Key="FDSemStatusError">#F1707B</Color>
    <Color x:Key="FDSemStatusErrorSubtle">#3C2A2A</Color>
    <Color x:Key="FDSemOnStatusError">#F1707B</Color>
    <Color x:Key="FDSemStatusErrorHover">#E04E5A</Color>
    <Color x:Key="FDSemStatusErrorPressed">#C73644</Color>

    <!-- ═══════ Status: Warning ═══════ -->
    <Color x:Key="FDSemStatusWarning">#FCE100</Color>
    <Color x:Key="FDSemStatusWarningSubtle">#3C3520</Color>

    <!-- ═══════ Status: Success ═══════ -->
    <Color x:Key="FDSemStatusSuccess">#6CCB5F</Color>
    <Color x:Key="FDSemStatusSuccessSubtle">#1F3D1F</Color>

    <!-- ═══════ Status: Info ═══════ -->
    <Color x:Key="FDSemStatusInfo">#60CDFF</Color>

    <!-- ═══════ Border ═══════ -->
    <Color x:Key="FDSemBorderDefault">#3E3E3E</Color>
    <Color x:Key="FDSemBorderStrong">#FFFFFF</Color>

    <!-- ═══════ Elevation ═══════ -->
    <Color x:Key="FDSemShadow">#60000000</Color>

    <!-- ═══════ Link ═══════ -->
    <Color x:Key="FDSemLinkDefault">#60CDFF</Color>
    <Color x:Key="FDSemLinkHover">#3AA0F3</Color>

    <!-- ═══════ Close Button ═══════ -->
    <Color x:Key="FDSemCloseHover">#E81123</Color>
    <Color x:Key="FDSemClosePressed">#C50E1F</Color>
    <Color x:Key="FDSemOnClose">#FFFFFF</Color>

</ResourceDictionary>
