    <Color x:Key="FDColorNeutral250">#323232</Color>
    <Color x:Key="FDColorNeutral300">#4A4A4A</Color>
    <Color x:Key="FDColorNeutral350">#323130</Color>
    <Color x:Key="FDColorNeutral400">#605E5C</Color>
    <Color x:Key="FDColorNeutral500">#8A8886</Color>
    <Color x:Key="FDColorNeutral600">#C8C6C4</Color>
    <Color x:Key="FDColorNeutral700">#E1DFDD</Color>
    <Color x:Key="FDColorNeutral800">#EDEBE9</Color>
