<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
        ═══════════════════════════════════════════════════════════════
        PRIMITIVE COLOR PALETTE — FluentDialogs.Wpf v2.0
        ═══════════════════════════════════════════════════════════════
        
        Raw color values forming the foundational palette.
        
        RULES:
        • Do NOT reference these from control styles or templates.
        • These are consumed ONLY by _Semantics.xaml and Presets.
        • To customize colors, override semantic tokens (FDSem*) instead.
        • Override these in Presets/Light.xaml or Presets/Dark.xaml.
    -->

    <!-- ═══════════════ Neutral Scale ═══════════════ -->
    <Color x:Key="FDColorNeutral000">#000000</Color>
    <Color x:Key="FDColorNeutral050">#1E1E1E</Color>
