<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        ═══════════════════════════════════════════════════════════════
        SEMANTIC TOKEN LAYER — FluentDialogs.Wpf v2.0
        ═══════════════════════════════════════════════════════════════
        
        Maps primitive palette colors to UI MEANINGS.
        This is THE layer host applications should override for brand customization.
        
        RULES:
        • All values use DynamicResource to enable runtime switching.
        • Presets (Light.xaml / Dark.xaml) override these keys with actual values.
        • Host apps override THESE for brand customization, not primitives.
        • Controls should consume these via _Brushes.xaml, not directly.
        
        Default values below are Light theme fallbacks.
    -->

    <!-- ═══════════════ Surface ═══════════════ -->
    <!--  Primary dialog/window background  -->
    <Color x:Key="FDSemSurfacePrimary">#FFFFFF</Color>
    <!--  Secondary/nested surface (e.g., detail text area, input background)  -->
    <Color x:Key="FDSemSurfaceSecondary">#F3F3F3</Color>
    <!--  Overlay / scrim behind modal dialogs  -->
    <Color x:Key="FDSemSurfaceOverlay">#20000000</Color>

    <!-- ═══════════════ On Surface (Text / Icons on surface backgrounds) ═══════════════ -->
    <!--  Primary text: titles, body text  -->
    <Color x:Key="FDSemOnSurfacePrimary">#201F1E</Color>
    <!--  Secondary text: subtitles, hints, timestamps  -->
    <Color x:Key="FDSemOnSurfaceSecondary">#605E5C</Color>

    <!-- ═══════════════ Interactive (Accent-colored interactive elements) ═══════════════ -->
    <!--  Rest state: primary buttons, links, accent elements  -->
    <Color x:Key="FDSemInteractiveDefault">#0078D4</Color>
    <!--  Hover state  -->
    <Color x:Key="FDSemInteractiveHover">#106EBE</Color>
    <!--  Pressed state  -->
    <Color x:Key="FDSemInteractivePressed">#005A9E</Color>
    <!--  Text/icon on interactive surfaces (e.g., white on blue)  -->
    <Color x:Key="FDSemOnInteractive">#FFFFFF</Color>

    <!-- ═══════════════ Neutral Interactive (Non-accent buttons) ═══════════════ -->
    <!--  Default/secondary button background at rest  -->
    <Color x:Key="FDSemNeutralDefault">#FFFFFF</Color>
    <!--  Hover state  -->
    <Color x:Key="FDSemNeutralHover">#F3F2F1</Color>
    <!--  Pressed state  -->
    <Color x:Key="FDSemNeutralPressed">#EDEBE9</Color>

    <!-- ═══════════════ Status: Error ═══════════════ -->
    <!--  Error accent (border, icon color on light theme)  -->
    <Color x:Key="FDSemStatusError">#D13438</Color>
    <!--  Subtle error background tint  -->
    <Color x:Key="FDSemStatusErrorSubtle">#FDE7E9</Color>
    <!--  Text on error surfaces / error foreground text  -->
    <Color x:Key="FDSemOnStatusError">#A4262C</Color>
    <!--  Danger button hover  -->
    <Color x:Key="FDSemStatusErrorHover">#A4262C</Color>
    <!--  Danger button pressed  -->
    <Color x:Key="FDSemStatusErrorPressed">#8F1E22</Color>

    <!-- ═══════════════ Status: Warning ═══════════════ -->
    <Color x:Key="FDSemStatusWarning">#F7630C</Color>
    <Color x:Key="FDSemStatusWarningSubtle">#FFF4CE</Color>

    <!-- ═══════════════ Status: Success ═══════════════ -->
    <Color x:Key="FDSemStatusSuccess">#107C10</Color>
    <Color x:Key="FDSemStatusSuccessSubtle">#DFF6DD</Color>

    <!-- ═══════════════ Status: Info ═══════════════ -->
    <Color x:Key="FDSemStatusInfo">#0078D4</Color>

    <!-- ═══════════════ Border ═══════════════ -->
    <!--  Standard/default borders  -->
    <Color x:Key="FDSemBorderDefault">#E1DFDD</Color>
    <!--  Strong/emphasized borders (hover, focus ring)  -->
    <Color x:Key="FDSemBorderStrong">#323130</Color>

    <!-- ═══════════════ Elevation / Shadow ═══════════════ -->
    <Color x:Key="FDSemShadow">#40000000</Color>

    <!-- ═══════════════ Link ═══════════════ -->
    <Color x:Key="FDSemLinkDefault">#0078D4</Color>
    <Color x:Key="FDSemLinkHover">#106EBE</Color>

    <!-- ═══════════════ Close Button (Fixed — not themed) ═══════════════ -->
    <!--  These remain consistent across themes (Windows convention)  -->
    <Color x:Key="FDSemCloseHover">#E81123</Color>
    <Color x:Key="FDSemClosePressed">#C50E1F</Color>
    <Color x:Key="FDSemOnClose">#FFFFFF</Color>

</ResourceDictionary>
