<Window x:Class="FluentDialogs.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="SingleBorderWindow"
        MinWidth="350"
        MinHeight="150"
        SizeToContent="WidthAndHeight"
        Background="{DynamicResource FDBrushSurfacePrimary}"
        Foreground="{DynamicResource FDBrushOnSurfacePrimary}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Message -->
        <TextBlock Grid.Row="0"
                   x:Name="MessageText"
                   Text="{Binding Message}"
                   Style="{DynamicResource FDProgressMessageStyle}"
                   Margin="0,0,0,16"/>

        <!-- Progress Bar -->
        <ProgressBar Grid.Row="1"
                     x:Name="ProgressBar"
                     Style="{DynamicResource FDProgressBarStyle}"
                     IsIndeterminate="{Binding IsIndeterminate}"
                     Value="{Binding Progress}"
                     Minimum="0"
                     Maximum="100"
                     Margin="0,0,0,8"/>

        <!-- Percentage Text -->
        <TextBlock Grid.Row="2"
                   x:Name="PercentageText"
                   Style="{DynamicResource FDProgressPercentageStyle}"
                   Margin="0,0,0,16"
                   Visibility="{Binding PercentageVisibility}">
            <Run Text="{Binding Progress, StringFormat={}{0:F0}}"/><Run Text="%"/>
        </TextBlock>

        <!-- Cancel Button -->
        <Button Grid.Row="3"
                x:Name="CancelButton"
                Content="Cancel"
                HorizontalAlignment="Center"
                Padding="24,8"
                MinWidth="100"
                Click="CancelButton_Click"
                Visibility="{Binding CancelButtonVisibility}"
                Style="{DynamicResource FDButtonSecondaryStyle}"/>
    </Grid>
</Window>
