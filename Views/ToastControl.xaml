<UserControl x:Class="FluentDialogs.Views.ToastControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="280"
             MaxWidth="350"
             Cursor="Hand">

    <Border x:Name="ToastBorder"
            Style="{DynamicResource FDToastBorderStyle}">

        <Border.Effect>
            <DropShadowEffect BlurRadius="{DynamicResource FDElevationToastBlur}" 
                              ShadowDepth="{DynamicResource FDElevationToastDepth}" 
                              Opacity="0.3"
                              Direction="270"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <Border Grid.Column="0"
                    x:Name="IconBorder"
                    Width="24"
                    Height="24"
                    CornerRadius="12"
                    Margin="0,0,12,0"
                    VerticalAlignment="Top">
                <TextBlock x:Name="IconText"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="White"/>
            </Border>

            <!-- Content -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="TitleText"
                           Style="{DynamicResource FDToastTitleStyle}"
                           Visibility="Collapsed"/>
                <TextBlock x:Name="MessageText"
                           Style="{DynamicResource FDToastMessageStyle}"/>
            </StackPanel>

            <!-- Close Button -->
            <Button Grid.Column="2"
                    x:Name="CloseButton"
                    Style="{DynamicResource FDToastCloseButtonStyle}"
                    Click="CloseButton_Click"/>
        </Grid>
    </Border>
</UserControl>
